<%- layout('layout') %>

<div class="container">
  <% if(0 == data.length){ %>
  <h3>No results for <%= query %></h3>
  <% } else { %>
    <div class="row">
      <% for(var i=0; i<data.length; i++) { %>
      <% p=data[i] %>
      <div class="col-md-4">
        <a href="/product/<%= p._source._id %>">
          <div class="thumbnail">
            <img src="<%= p._source.image %>">
            <div class="caption">
              <h3><%= p._source.name %></h3>
              <p><%= p._source.category.name %></p>
              <p>$<%= p._source.price %></p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  <% } %>
</div>
