<%- layout('layout') %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= product.image %>">
    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
      <h3><%= product.name %></h3>
      <h4>$<%= product.price %></h4>

      <form method="post" action="/product/<%= product._id %>">
        <div class="btn-group" role="group" aria-lable="...">
          <input type="hidden" name="quantity" id="quantity" value=1>
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default" readonly>1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
        </div>
        <div class="form-group">
          <input type="hidden" name="product_id" id="product_id" value="<%= product._id %>">
          <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">
          <input type="text" name="item" id="item" class="form-control" value="<%= product.name %>" readonly>
          <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>" readonly>
        </div>
        <% if(user) { %>
          <button type="submit" class="btn btn-primary btn-lg">Add to cart</button>
        <% } else { %>
          <a href="/signup" class="btn btn-warning btn-lg">Sign up</a> to begin buying.
        <% } %>
      </form>
    </div>
  </div>
</div>
