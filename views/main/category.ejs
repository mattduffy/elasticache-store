<%- layout('layout') %>

<div class="container">
  <div class="row">
    <% for(var i=0; i<products.length; i++) { %>
    <% p=products[i] %>
    <div class="col-md-4">
      <a href="/product/<%= p._id %>">
        <div class="thumbnail">
          <img src="<%= p.image %>">
          <div class="caption">
            <h3><%= p.name %></h3>
            <p><%= p.category.name %></p>
            <p>$<%= p.price %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
